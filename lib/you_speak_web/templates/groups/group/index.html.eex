<%= if @groups == [] do %>
  <section class="phx-hero">
    <p class="alert alert-info">
      You have no groups yet.
    </p>
  </section>
<%= else %>
  <h2>Listing groups</h1>

  <table class="centered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Details</th>
        <th>Edit</th>
        <th>Add Meeting</th>
      </tr>
    </thead>
    <tbody>
      <%= for group <- @groups do %>
        <tr>
          <td><%= group.name %></td>
          <td><%= link "Details", to: Routes.group_path(@conn, :show, group) %></td>
          <td><%= link "Edit", to: Routes.group_path(@conn, :edit, group) %></td>
          <td><%= link "Add Meeting", to: Routes.group_meeting_path(@conn, :new, group) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<div class="fixed-action-btn">
  <%= link "Add", to: Routes.group_path(@conn, :new), class: "button" %>
</div>
